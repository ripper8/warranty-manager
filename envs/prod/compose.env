# Production Environment Variables for Docker Compose
# This file is copied to .env during deployment

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=warranty_db

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# Application Configuration
DATABASE_URL=postgresql://postgres:password@postgres:5432/warranty_db?schema=public
AUTH_SECRET=supersecretkey_change_me_in_production
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=
NEXTAUTH_URL=https://warranty.acyapps.com

# S3/MinIO Configuration
S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1
